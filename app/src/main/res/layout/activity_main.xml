<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/d1">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".homepage_fac"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/auth1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="150dp"
            android:text="Compiler Design"
            android:textColor="#ffffffff"
            android:background="#ffBE80FF"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="25sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/auth2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Distributed System"
            android:textColor="#ffffffff"
            android:background="#ffBE80FF"
            android:textSize="25sp"
            android:gravity="center_vertical|center_horizontal"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/auth3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Database Management System"
            android:textColor="#ffffffff"
            android:background="#ffBE80ff"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="25sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/auth4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Mobile Computing"
            android:textColor="#ffffffff"
            android:background="#ffBE80ff"
            android:textSize="25sp"
            android:gravity="center_vertical|center_horizontal"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/auth5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Web Engineering"
            android:textColor="#ffffffff"
            android:background="#ffBE80ff"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="25sp" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigator_header"
        app:menu="@menu/navigation_menu"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
